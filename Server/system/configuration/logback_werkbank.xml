<configuration scan="true" scanPeriod="30 seconds">	<statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />	<property name="LOGGING_HOME" value="/opt/tomcat/mobilo/Server/system/logs" />	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">		<encoder>			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>		</encoder>		</appender>	<appender name="FILE" class="ch.qos.logback.core.rolling.RollingFileAppender">		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">			<fileNamePattern>${LOGGING_HOME}/werkbank-%d{yyyy-MM-dd}.%i.txt</fileNamePattern>				<timeBasedFileNamingAndTriggeringPolicy					class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">				<maxFileSize>5MB</maxFileSize>			</timeBasedFileNamingAndTriggeringPolicy>		</rollingPolicy>		<encoder>		  <pattern>%-30(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{32} - %msg%n</pattern>		</encoder>	</appender>	<logger name="com.mobilanten" level="info" />	<logger name="org.springframework.web" level="info" />	<logger name="org.springframework.beans" level="info" />	<logger name="org.springframework.orm" level="info" />	<logger name="org.springframework.web" level="info" />	<logger name="net.sf.ehcache" level="info" />	<logger name="org.hibernate.cache" level="info" />	<root level="info">		<appender-ref ref="FILE" />		<appender-ref ref="STDOUT" />	</root></configuration>