<configuration scan="true" scanPeriod="30 seconds">	<statusListener class="ch.qos.logback.core.status.OnConsoleStatusListener" />	<property name="LOGGING_HOME" value="/opt/tomcat/mobilo/Server/system/logs" />	<appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">		<!-- encoders are assigned the type         ch.qos.logback.classic.encoder.PatternLayoutEncoder by default -->		<encoder>			<pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>		</encoder>	</appender>	<appender name="SERVER" class="ch.qos.logback.core.rolling.RollingFileAppender">		<rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">		  <fileNamePattern>${LOGGING_HOME}/server-%d{yyyy-MM-dd}.%i.txt</fileNamePattern>		  <timeBasedFileNamingAndTriggeringPolicy				class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">			<maxFileSize>5MB</maxFileSize>		  </timeBasedFileNamingAndTriggeringPolicy>		</rollingPolicy>		<encoder>		  <pattern>%-30(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{32} - %msg%n</pattern>		</encoder>	</appender>    <appender name="SYSTEM" class="ch.qos.logback.core.rolling.RollingFileAppender">    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">      <fileNamePattern>${LOGGING_HOME}/system-%d{yyyy-MM-dd}.%i.txt</fileNamePattern>      <timeBasedFileNamingAndTriggeringPolicy            class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">        <maxFileSize>5MB</maxFileSize>      </timeBasedFileNamingAndTriggeringPolicy>    </rollingPolicy>    <encoder>      <pattern>%-30(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{32} - %msg%n</pattern>    </encoder>  </appender>  <appender name="SUBSCRIPTION" class="ch.qos.logback.core.rolling.RollingFileAppender">    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">      <fileNamePattern>${LOGGING_HOME}/subscription-%d{yyyy-MM-dd}.%i.txt</fileNamePattern>      <timeBasedFileNamingAndTriggeringPolicy            class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">        <maxFileSize>5MB</maxFileSize>      </timeBasedFileNamingAndTriggeringPolicy>    </rollingPolicy>    <encoder>      <pattern>%-30(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{32} - %msg%n</pattern>    </encoder>  </appender>      <appender name="SYNC" class="ch.qos.logback.core.rolling.RollingFileAppender">    <rollingPolicy class="ch.qos.logback.core.rolling.TimeBasedRollingPolicy">      <fileNamePattern>${LOGGING_HOME}/sync-%d{yyyy-MM-dd}.%i.txt</fileNamePattern>      <timeBasedFileNamingAndTriggeringPolicy            class="ch.qos.logback.core.rolling.SizeAndTimeBasedFNATP">        <maxFileSize>5MB</maxFileSize>      </timeBasedFileNamingAndTriggeringPolicy>    </rollingPolicy>    <encoder>      <pattern>%-30(%d{HH:mm:ss.SSS} [%thread]) %-5level %logger{32} - %msg%n</pattern>    </encoder>  </appender>    <logger name="com.mobilanten" level="info" />  <logger name="org.springframework.web" level="info" />  <logger name="org.springframework.beans" level="info" />  <logger name="org.springframework.orm" level="info" />  <logger name="org.springframework.web" level="info" />  <logger name="net.sf.ehcache" level="info" />  <logger name="org.hibernate.cache" level="info" />  <root level="info">    <appender-ref ref="SYSTEM" />    <appender-ref ref="STDOUT" />  </root></configuration>